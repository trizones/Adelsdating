<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Din plats</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <div class="top-left">
                    @if (ViewData["newFriend"] != null)
                    {      
                    <h2 class="navbar-brand" id="newFriends">@ViewData["newFriend"]</h2>  

                    }
                    else
                    {
                        <h2 class="navbar-brand">@ViewData["noFriend"]</h2>
                    }

                    @Html.ActionLink(DataLogic.Resources.Language.Home, "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    @Html.ActionLink(DataLogic.Resources.Language.Languages, "Index", "Language", routeValues: null, htmlAttributes: new { @class = "navbar-brand" })

                </div>
            </div>

            <div style="float:left;">
                @using (Html.BeginForm("Search", "User"))
                {
                    <!-- Gör sökning till användare -->
                    <input class="searchfield" name="search" type="text" placeholder="Sök efter användare.." />
                    <input class="btn-success" type="submit" value="Sök" />

                }
            </div>

            <div class="navbar-collapse collapse">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="foot-links">
                <ul class="footer-ul">
                    <li>By Rich People Studios &copy;</li>

                </ul>
            </div>
        </footer>
    </div>
    <script> 
        var blink_speed = 600; // every 1000 == 1 second, adjust to suit
        var t = setInterval(function () {
            var ele = document.getElementById('newFriends');
            ele.style.visibility = (ele.style.visibility == 'hidden' ? '' : 'hidden');
        }, blink_speed);
    </script>
   
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
