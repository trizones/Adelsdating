@model IEnumerable<Web.Models.ApplicationUser>

@{
    ViewBag.Title = "Page";
}

@{
    var user = Model.First();
}

<div class="MyPage">
    <div class="UserNamePic">
        <h1>@user.Nickname</h1>
        <img src="@Url.Action("UserPicture", "Home", new { nickname = user.Nickname })" style="width:300px;height:300px; background: #FFFFFF;
    margin: auto;
    padding: 6px;
    box-shadow: 0px 0px 20px #888;" />
    </div>
    <div class="UserInformation">
        <ol>
            <li>Namn: @String.Concat(user.Firstname, " ", user.Lastname) </li>
            <li>
                @Html.ActionLink("Send Friendrequest", "SendRequest", "FriendRequest", new { id = user.Id }, null)
            </li>
        </ol>
    </div>
    <div>
        <ol>
            @{var Interests = user.Interests.ToList();}
            @foreach (var anInterest in Interests)
            {
                <li><a>@Html.DisplayText(anInterest.Title)</a></li>
            }
        </ol>


    </div>

</div>

